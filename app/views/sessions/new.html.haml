%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: sign_in_path do |f|
        %header
          %h1 Sign In
        %fieldset
          = f.email_field :email, label: 'Email Address', autofocus: true
          = f.password_field :password
        .btn-group
          .controls
            %input(type="submit" value="Sign in" class="btn btn-danger")
            = link_to "Forgot your password?", forgot_password_path, class: "btn btn-default"