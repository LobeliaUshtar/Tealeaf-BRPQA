%section#top-header.row
  %h1.span2
    = link_to "TL-FLiX", home_path
    - if current_user
      %ul.span4.clearfix
        %li= link_to "Videos"
        %li= link_to "My Queue"
        %li= link_to "People"
      %form.col-md-5.navbar-form(action=search_videos_path)
        .form-group
          %input.form-control(type="text" name="search_term"  placeholder="Video Search")
        %button.btn.btn-default(type="submit") Search
      #user_links.pull-right
        %ul
          %li.dropdown
            %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
              Welcome, #{current_user.full_name}
              %b.caret
            %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
              %li
                %a(href="#") Account
                %a(href="#") Plan and Billing
                = link_to 'Sign Out', sign_out_path