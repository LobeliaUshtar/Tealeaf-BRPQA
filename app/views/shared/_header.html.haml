%section#top-header.row
  %h1.col-md-2
    = link_to "TL-FLiX", root_path
  - if current_user
    %ul.col-md-8.clearfix
      %li= link_to "Videos", home_path
      %li= link_to "Queue", queue_path
      %li= link_to "People", people_path
      = bootstrap_form_tag url: search_videos_path, method: 'get' do
        = text_field_tag :search_term
        .controls
          %input(type="submit" value="Search" class="btn btn-xs btn-default")
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.full_name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Invite a Friend
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to 'Sign Out', sign_out_path